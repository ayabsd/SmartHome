<resources>
    <!-- Base application theme. -->
    <style name="Theme.SmartHome" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
        <item name="colorAccent">@color/white</item>
        <item name="actionBarStyle">@style/Theme.SmartHome.actionbarStyle</item>
    </style>

    <style name="Theme.SmartHome.actionbarStyle">
        <item name="android:background">@color/gray</item>
    </style>


    <style name="Theme.SmartHome.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="Theme.SmartHome.Text.content" parent="Theme.SmartHome.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.SmartHome.card">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>

    </style>

    <style name="Theme.SmartHome.btn_close">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:src">@android:drawable/ic_menu_close_clear_cancel</item>

    </style>

</resources>